@using PruebaPractica.Models
@model List<UsuarioCLS>
@{
    ViewBag.Title = "Home Page";
}
<h2>Usuarios</h2>
@Html.ActionLink("Agregar Usuario","Agregar","Home",null, new { @class="btn btn-primary"})

<table class="table table-hover table-bordered"}>

    <thead>
        <tr>
            <th>Id</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Fecha de nacimiento</th>
            <th>Telefono celular</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>@item.Apellidos</td>
            <td>@item.FechaNacimiento</td>
            <td>@item.TelefonoCelular</td>
            <td>
                @Html.ActionLink(" ", "Editar", "Home", new { id = @item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-primary" })
                <button type="button" onclick="boton(@item.Id)" class="glyphicon glyphicon-trash btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                    
                </button>
            </td>
        </tr>
        }

    </tbody>


</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Desea eliminar este usuario?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div style="padding:1em">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" onclick="Guardar()" class="btn btn-info">Aceptar</button>
            </div>
        </div>
    </div>
</div>

@using(Html.BeginForm("Eliminar","Home",FormMethod.Post,new { @id = "EliminarDato" }))
{
    @Html.Hidden("idusuario");
}

<script>

    function boton(Id) {
        document.getElementById("idusuario").value = Id;
    }

    function Guardar() {
        var EliminarDato = document.getElementById("EliminarDato");
        EliminarDato.submit();
    }
</script>